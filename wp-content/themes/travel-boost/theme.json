{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#000",
					"name": "Primary"
				},
                {
					"slug": "hover",
					"color": "#15d1eb",
                    "name": "Hover"
                },
                {
                    "slug": "background",
					"color": "#ffffff",
                    "name": "Background"
                },
				{
					"slug": "button-hover",
					"color": "#0bbbd3",
					"name": "Button Hover"
				}
			]
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"layout": {
			"contentSize": "1250px",
			"wideSize": "1500px"
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "Poppins, sans-serif",
					"name": "Poppins",
					"slug": "poppins",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontWeight": "300",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/fonts/poppins/Poppins-Light.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/fonts/poppins/Poppins-Regular.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "500",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/fonts/poppins/Poppins-Medium.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "600",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/fonts/poppins/Poppins-SemiBold.ttf"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "",
							"src": [
								"file:./assets/fonts/poppins/Poppins-Bold.ttf"
							]
						}
					]
				}
			],
            "fontSizes": [
				{
					"slug": "tiny",
					"size": "13px",
					"name": "Tiny"
				},
				{
					"slug": "extra-small",
					"size": "14px",
					"name": "Extra Small"
				},
				{
					"slug": "small",
					"size": "15px",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "16px",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "26px",
					"name": "large"
				},
				{
					"slug": "very-large",
					"size": "36px",
					"name": "Very Large"
				},
				{
					"slug": "extra-large",
					"size": "44px",
					"name": "Extra Large"
				}
			]
		},
		"custom": {
			"button-shadow": "0 8px 8px 0 rgba(0, 0, 0, 0.2)",
			"small-button-shadow": "0 1px 1px 0 rgba(0, 0, 0, 0.2)",
			"button-highlight": "0 0 0 #fff",
			"button-border-color": "rgba(0, 0, 0, 0.05)",
			"button-border-radius": "4px",
			"button-padding": ".3rem 1rem",
			"small": "max(1.75rem, 5vw)",
			"outer": "var(--wp--custom--small, 1.25rem)",
			"typography": {
				"font-size": {
					"heading-one": "clamp(36px,3.5vw,56px)",
					"heading-two": "clamp(32px,2.6vw,49px)",
					"heading-three": "clamp(18px,1.9vw,24px)",
					"heading-four": "clamp(18px,2vw,26px)",
					"heading-five": "clamp(22px,1.3vw,24px)",
					"heading-six": "18px",
					"huge-post-title": "clamp(38px,4.6vw,80px)"
				}
			}
		}
	},
	"styles": {
		"blocks":{
			"core/navigation": {
				"typography": {
					"fontSize":"var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"lineHeight": "21px",
		            "fontWeight": "500"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"lineHeight": "1.625rem",
		            "fontWeight": "600"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--default)",
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"lineHeight": "2.078",
		            "fontWeight": "400"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--default)",
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"lineHeight": "2.078",
		            "fontWeight": "400"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--default)",
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"lineHeight": "2.078",
		            "fontWeight": "400"
				}
			},
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--poppins)",
					"lineHeight": "1.6",
		            "fontWeight": "400"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
			,
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"spacing": {
			"blockGap": "20px"
		},
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontFamily": "var(--wp--preset--font-family--poppins)",
			"lineHeight": "1.625rem",
            "fontWeight": "400"
		},
		"elements": {
            "h1": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--preset--font-size--extra-large)",
					"fontWeight": "500"				
				              }
			},
			"h2": {
				"typography": {
					"lineHeight": "1.5",
					"fontSize": "var(--wp--custom--typography--font-size--heading-two)",
					"fontWeight": "500"			
					}
			},
			"h3": {
				"typography": {
					"lineHeight": "1.5",
					"fontSize": "var(--wp--custom--typography--font-size--heading-three)",
					"fontWeight": "600"
				}
			},
			"h4": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-four)",
					"fontWeight": "600"
				}
			},
			"h5": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-five)",
					"fontWeight": "400"
				}
			},
			"h6": {
				"typography": {
					"lineHeight": "1",
					"fontSize": "var(--wp--custom--typography--font-size--heading-six)",
					"fontWeight": "600"
				}
			},
			"button": {
				"typography": {
					"lineHeight": "1.6",
					"fontWeight": "500"
				},

				"border": {
					"radius": "3px"
				},

				"color": {
					"text": "var(--wp--preset--color--background)",
					"background":"var(--wp--preset--color--hover)"
				},
				":hover": {
					"color": {
		               	"text":"var(--wp--preset--color--background)",
		                "background": "var(--wp--preset--color--button-hover)"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
            	"typography": {
            		"textDecoration": "underline"
            	},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--hover)"
					}
				}

            }
        }
	},
    "templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "uncategorized",
			"name": "recent-product",
			"title": "Recent Product"
		},
		{
			"area": "uncategorized",
			"name": "siderbar",
			"title": "Sidebar"
		},
		{
			"area": "uncategorized",
			"name": "woosidebar",
			"title": "Woo Sidebar"
		}
	],
		"customTemplates": [
		{
			"name": "contact",
			"title": "Contact",
			"postTypes": [
				"page"
			]
		}
	]
}

